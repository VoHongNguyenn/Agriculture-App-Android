<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

<!--            <ImageView-->
<!--                android:id="@+id/settingIcon"-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:src="@drawable/ic_settings"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:contentDescription="Settings"/>-->

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="TÀI KHOẢN"
                android:textColor="#161414"
                android:textSize="20sp"
                android:textStyle="bold" />

<!--            <ImageView-->
<!--                android:id="@+id/qrIcon"-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:src="@drawable/ic_qr_code"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:contentDescription="QR Code"/>-->
        </RelativeLayout>

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#333333"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:clipToOutline="true"
            android:backgroundTint="@color/black"
            android:backgroundTintMode="src_in"
            android:elevation="4dp"
            >

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doremon"
                android:background="@drawable/circle_background"
                android:contentDescription="Profile Image"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Albert Flores"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="example@gmail.com"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp" />
            </LinearLayout>

<!--            <ImageView-->
<!--                android:id="@+id/qrcodeProfile"-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:src="@drawable/ic_qr_code"-->
<!--                android:contentDescription="QR Code"-->
<!--                android:tint="#FFFFFF"/>-->
        </LinearLayout>

        <!-- List Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Item thông tin chi tiết -->
            <LinearLayout
                android:id="@+id/layout_profile_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/icon_account_box_24"
                    android:contentDescription="Thông tin tài khoản"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Thông tin chi tiết"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_arrow_right"
                    android:contentDescription="Go"/>
            </LinearLayout>

            <!-- Item đổi mật khẩu -->
            <LinearLayout
                android:id="@+id/layoutChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/icon_lock_reset_24"
                    android:contentDescription="Đổi mật khẩu"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Đổi mật khẩu"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_arrow_right"
                    android:contentDescription="Go"/>
            </LinearLayout>

            <!-- Item lịch sử mua hàng -->
            <LinearLayout
                android:id="@+id/layoutOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/icon_history_24"
                    android:contentDescription="Lịch sử mua hàng"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Lich sử mua hàng"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_arrow_right"
                    android:contentDescription="Go"/>
            </LinearLayout>

            <!-- Item đăng xuất - Thêm bên dưới layoutOrderHistory -->
            <LinearLayout
                android:id="@+id/layoutLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/baseline_logout_24"
                    android:contentDescription="Đăng xuất"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Đăng xuất"
                    android:textColor="#FF0000"
                    android:textSize="17sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_arrow_right"
                    android:contentDescription="Go"/>
            </LinearLayout>

            <!-- Copy thêm các item dưới đây cho: Payment Methods, Language, Account & Security, My Profile -->

        </LinearLayout>

    </LinearLayout>
</ScrollView>