<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SearchPage"
    android:background="@drawable/groceroy_items_background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- SearchView -->
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search products..."
            android:iconifiedByDefault="false"
            android:background="@drawable/search_shape"
            android:layout_marginBottom="8dp" />

        <!-- Hàng lọc giá: Min, Max, Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/minPriceEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Min"
                android:inputType="number"

                android:padding="8dp"
                android:layout_marginEnd="4dp"/>

            <EditText
                android:id="@+id/maxPriceEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Max"
                android:inputType="number"

                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/priceFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#AC1045"
                android:text="TÌM"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Sản phẩm phổ biến -->
        <EditText
            android:id="@+id/popularProductsEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Sản phẩm phổ biến"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:clickable="false"
            android:padding="8dp"
            android:textSize="16sp" />

        <!-- Hàng các nút thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/threeDaysBtn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="3 ngày qua"
                android:textSize="12sp"
                android:background="#E0E0E0"
                android:textColor="@android:color/black"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/sevenDaysBtn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="7 ngày qua"
                android:textSize="12sp"
                android:background="#E0E0E0"
                android:textColor="@android:color/black"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/fourteenDaysBtn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="14 ngày qua"
                android:textSize="12sp"
                android:background="#E0E0E0"
                android:textColor="@android:color/black"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/thirtyDaysBtn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="30 ngày qua"
                android:textSize="12sp"
                android:background="#E0E0E0"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchItemRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
